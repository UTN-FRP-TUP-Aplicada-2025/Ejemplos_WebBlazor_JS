@page "/demo-ejemplo8-anidado"
@using WebBlazor_JS
@using WebBlazor_JS.Components
@using WebBlazor_JS.Components.Pages.DemosComponent.Modelo.Component

@rendermode InteractiveServer
@attribute [StreamRendering]

<h3>Demo 8</h3>


<div class="row">

    <div class="card-3">
        <button class="btn btn-primary" @onclick="OnVer">Ver Editor</button>
        <InputText @bind-Value="text" class="form-control"></InputText>
    </div>

    <div class="card-3">
        @if(esVisible)
        {
            <Ejemplo8 @bind-Text="text" @ref="ejemplo8"></Ejemplo8>
        }
    </div>

    <div class="card-3">
        @text
    </div>
</div>

@code {
    Ejemplo8 ejemplo8;

    string text = "";

    bool esVisible = false;

    protected void OnVer()
    {
        esVisible = !esVisible;    
    }
}
